{
    "name": "manueldimmler/hmac-signature-middleware",
    "description": "Two PSR-15 middlewares to create and verify HMAC signatures",
    "keywords": ["hmac", "signature", "authentication", "middleware", "psr-15"],
    "homepage": "https://github.com/manueldimmler/hmac-signature-middleware",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Manuel Dimmler",
            "email": "manuel.dimmler@datapp.de",
            "homepage": "https://datapp.de"
        }
    ],
    "require": {
        "php": ">=8.0",
        "psr/http-server-middleware": "^1.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "infection/infection": "^0.26.10",
        "vimeo/psalm": "^4.23"
    },
    "autoload": {
        "psr-4": {
            "Http\\Middleware\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
